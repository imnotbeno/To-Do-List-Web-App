      <%# Iterate through each new item and add as new list item %>
      <% for(var i = 0; i < newitem.length;i++){ %>
        <li><%=newitem[i]%></li>
      <% } %>
    </ul>

    <form action="/" method="POST">
      <input type="text" name="newItem" />
      <button type="submit" name="button">Add</button>
    </form>
  </body>
</html>
